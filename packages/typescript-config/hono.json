{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./base.json",
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "outDir": "./dist",
    "verbatimModuleSyntax": true,
    "skipLibCheck": true,
    "strict": true,
    "types": [ "node" ]
  },
  "tsc-alias": {
    "resolveFullPaths": true
  }
}